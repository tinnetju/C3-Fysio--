<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.3.xsd">
     
    <bean name="clientRepository" class="nl.avans.C3.DataStorage.ClientRepository">
        <constructor-arg val="DataSource"/>
    </bean>
    
    <bean name="clientRepositoryIF" class="nl.avans.C3.DataStorage.ClientRepositoryIF"/>
    
    <bean name="clientService" class="nl.avans.C3.BusinessLogic.ClientService">
        <property name="clientRepository" ref="clientRepository"></property>
    </bean>
</beans>
